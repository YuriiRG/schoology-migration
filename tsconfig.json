{
  "compilerOptions": {
    // enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",

    // best practices
    "strict": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./*.ts"]
}
